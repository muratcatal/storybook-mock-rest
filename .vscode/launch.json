    "version": "0.2.0",
    "configurations": [{
        "name": "Launch jest test",
        "type": "node",
        "request": "launch",
        "env": {
          "NODE_ENV": "test"
        },
        "args": [
          "--colors",
          "--runInBand",
          "--coverage"
        ],
        "runtimeArgs": [
          "--nolazy"
        ],
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        },
        "outputCapture": "std",
        "internalConsoleOptions": "openOnSessionStart"
      },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}\\dist\\server.js"
        }
    ]
}